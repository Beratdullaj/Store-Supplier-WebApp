@model SmallCartViewModel

@if (Model != null)
{
    <p>Items in cart: <span class="badge badge-success">@Model.NumberOfItems</span></p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <div class="d-flex">
        <a class="btn btn-success mr-2" asp-controller="Cart" asp-action="Index">View Cart</a>
        <a class="btn btn-danger ml-2" asp-controller="Cart" asp-action="Clear">Clear Cart</a>
    </div>
    
}

else
{
    <p class="lead m-0">Your cart is empty.</p>
}
